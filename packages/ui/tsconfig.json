{
  "extends": "../shared/tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "references": [{ "path": "../logger" }],
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.stories.*",
    "src/logger-demo.tsx",
    "src/logging-test.tsx"
  ]
}
