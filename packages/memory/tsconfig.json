{
  "extends": "../shared/tsconfig.package.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../schema"
    },
    {
      "path": "../db"
    },
    {
      "path": "../logger"
    }
  ]
}
