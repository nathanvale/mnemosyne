{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": false,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "scripts/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.test.ts"
  ]
}
