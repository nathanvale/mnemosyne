{
  "settings": {
    "notifySound": false,
    "speak": true,
    "debug": false,
    "cooldownPeriod": 2000,
    "tts": {
      "provider": "openai",
      "openai": {
        "apiKey": "${OPENAI_API_KEY}",
        "model": "tts-1",
        "voice": "alloy",
        "speed": 1.0,
        "format": "mp3"
      }
    }
  }
}

// OpenAI TTS Voice Options:
//
// "alloy" - Balanced, neutral voice (default)
// "echo" - Clear, professional voice
// "fable" - Warm, storytelling voice
// "onyx" - Deep, authoritative voice
// "nova" - Bright, energetic voice
// "shimmer" - Soft, friendly voice
//
// Model Options:
// "tts-1" - Standard quality, faster (default)
// "tts-1-hd" - High definition quality, slower
//
// Speed Range: 0.25 to 4.0 (default: 1.0)
// Format Options: "mp3", "opus", "aac", "flac"
//
// Example configurations for different voices:
//
// Professional/Business:
// { "voice": "echo", "speed": 0.9 }
//
// Friendly/Casual:
// { "voice": "nova", "speed": 1.1 }
//
// Authoritative/Serious:
// { "voice": "onyx", "speed": 0.8 }
//
// Warm/Storytelling:
// { "voice": "fable", "speed": 1.0 }
//
// Soft/Gentle:
// { "voice": "shimmer", "speed": 0.95 }
