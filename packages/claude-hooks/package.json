    "clean": "rm -rf dist hooks *.tsbuildinfo",
    "setup": "pnpm run build && node scripts/setup-hooks.js"
  },
  "dependencies": {
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@studio/eslint-config": "workspace:*",
    "@studio/typescript-config": "workspace:*",
