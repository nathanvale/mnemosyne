{
  "name": "@studio/claude-hooks",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./sound-notification": "./src/sound-notification/index.ts",
    "./quality-check": "./src/quality-check/index.ts",
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "build": "tsc && node scripts/build-hooks.js",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
