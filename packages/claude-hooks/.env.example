# TTS Provider Configuration
# ============================

# Provider Selection (auto, openai, elevenlabs, or macos)
# auto = automatically detect best available provider
CLAUDE_HOOKS_TTS_PROVIDER=auto
CLAUDE_HOOKS_TTS_FALLBACK_PROVIDER=macos

# OpenAI TTS Configuration
# ------------------------
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_HOOKS_OPENAI_MODEL=tts-1
CLAUDE_HOOKS_OPENAI_VOICE=alloy
CLAUDE_HOOKS_OPENAI_SPEED=1.0
CLAUDE_HOOKS_OPENAI_FORMAT=mp3

# ElevenLabs TTS Configuration
# ----------------------------
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
CLAUDE_HOOKS_ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default: Rachel
CLAUDE_HOOKS_ELEVENLABS_MODEL_ID=eleven_multilingual_v2
CLAUDE_HOOKS_ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128
CLAUDE_HOOKS_ELEVENLABS_STABILITY=0.5
CLAUDE_HOOKS_ELEVENLABS_SIMILARITY_BOOST=0.75
CLAUDE_HOOKS_ELEVENLABS_SPEED=1.0
CLAUDE_HOOKS_ELEVENLABS_ENABLE_LOGGING=true

# Legacy support (deprecated - use CLAUDE_HOOKS_ELEVENLABS_VOICE_ID instead)
# CLAUDE_HOOKS_ELEVENLABS_TTS_VOICE=21m00Tcm4TlvDq8ikWAM

# macOS TTS Configuration
# -----------------------
CLAUDE_HOOKS_MACOS_VOICE=Samantha
CLAUDE_HOOKS_MACOS_RATE=200
CLAUDE_HOOKS_MACOS_VOLUME=0.7

# Audio Cache Configuration
# -------------------------
CLAUDE_HOOKS_AUDIO_CACHE_ENABLED=true
CLAUDE_HOOKS_AUDIO_CACHE_MAX_SIZE_MB=100
CLAUDE_HOOKS_AUDIO_CACHE_MAX_AGE_DAYS=7
CLAUDE_HOOKS_AUDIO_CACHE_MAX_ENTRIES=100