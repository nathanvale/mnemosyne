{
  "name": "@studio/mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && node ../../scripts/fix-esm-extensions.js dist",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format:check": "prettier --check src",
    "test": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@studio/schema": "workspace:*",
    "@studio/memory": "workspace:*",
    "@studio/db": "workspace:*",
    "@studio/logger": "workspace:*",
    "@trpc/server": "^10.0.0",
    "express": "^4.18.0",
    "uuid": "^10.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@studio/test-config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
