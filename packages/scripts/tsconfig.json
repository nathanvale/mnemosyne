{
  "extends": "../shared/tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "references": [
    { "path": "../schema" },
    { "path": "../db" },
    { "path": "../logger" },
    { "path": "../test-config" }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*"
  ]
}
