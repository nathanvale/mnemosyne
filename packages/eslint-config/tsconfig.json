{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["dist", "node_modules"]
}
