{
  "name": "@studio/eslint-config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./base": {
      "development": "./src/base.js",
      "import": "./src/base.js",
      "default": "./src/base.js"
    },
    "./next": {
      "development": "./src/next.js",
      "import": "./src/next.js",
      "default": "./src/next.js"
    },
    "./library": {
      "development": "./src/library.js",
      "import": "./src/library.js",
      "default": "./src/library.js"
    }
  },
  "scripts": {
    "build": "echo 'ESLint config - no build needed'",
    "lint": "eslint src --max-warnings 0",
    "format:check": "prettier --check src",
    "test": "vitest",
    "type-check": "tsc --noEmit --skipLibCheck",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "15.3.4",
    "@typescript-eslint/eslint-plugin": "^8.6.2",
    "@typescript-eslint/parser": "^8.6.2",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-turbo": "^2.5.4",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.0.14",
    "eslint-plugin-turbo": "^2.5.4",
    "typescript-eslint": "^8.6.2"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@studio/typescript-config": "workspace:*",
    "vitest": "^3.2.4"
  }
}
