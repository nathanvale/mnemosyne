{
  "name": "@studio/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "development": "./generated/index.js",
      "types": "./generated/index.d.ts",
      "import": "./generated/index.js",
      "default": "./generated/index.js"
    }
  },
  "scripts": {
    "build": "prisma generate && tsc && node ../../scripts/fix-esm-extensions.js dist",
    "dev": "prisma generate --watch",
    "type-check": "prisma generate && tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "format:check": "prettier --check src",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "clean": "rm -rf dist generated *.tsbuildinfo"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@studio/schema": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^6.11.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
