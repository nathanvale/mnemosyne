{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "composite": false,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
