{
  "name": "@studio/code-review",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "format:check": "prettier --check src",
    "clean": "rm -rf dist *.tsbuildinfo",
    "review:fetch-coderabbit": "tsx src/cli/fetch-coderabbit.ts",
    "review:fetch-github": "tsx src/cli/fetch-github-data.ts",
    "review:analyze": "tsx src/cli/analyze-pr.ts",
    "review:report": "tsx src/cli/generate-report.ts",
    "review:expert": "tsx src/cli/expert-pr-analysis.ts",
    "review:unified": "tsx src/cli/unified-analysis.ts",
    "review:agent": "tsx src/agent/pr-reviewer-agent.ts",
    "review:agent-wrapper": "tsx src/cli/agent-wrapper.ts",
    "review:pr": "tsx src/cli/review-pr-complete.ts",
    "review:help": "echo 'Available commands:\\n  pnpm review:pr --help (complete workflow)\\n  pnpm review:agent --help (PR reviewer agent)\\n  pnpm review:agent-wrapper --help (agent wrapper with logging)\\n  pnpm review:unified --help (unified analysis)\\n  pnpm review:expert --help (expert analysis)\\n  pnpm review:fetch-github --help (GitHub data)\\n  pnpm review:fetch-coderabbit --help\\n  pnpm review:analyze --help\\n  pnpm review:report --help'"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "dotenv": "^16.4.7",
    "ora": "^8.1.1",
    "tsx": "^4.19.2",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@studio/eslint-config": "workspace:*",
    "@studio/mocks": "workspace:*",
    "@studio/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "msw": "^2.10.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
