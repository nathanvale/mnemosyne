# ======================================
# Claude Hooks Environment Variables
# ======================================
# Copy this file to .env and fill in your actual values
# These variables are automatically loaded by the claude-hooks package

# ======================================
# API Keys
# ======================================

# OpenAI API Key for TTS (Text-to-Speech)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=test-openai-key

# ElevenLabs API Key for TTS (Text-to-Speech)
# Get your API key from https://elevenlabs.io/api
ELEVENLABS_API_KEY=test-elevenlabs-key

# Tavily API Key for MCP integration
# Get your API key from https://tavily.ai/
TAVILY_API_KEY=test-tavily-key

# Firecrawl API Key for MCP integration
# Get your API key from https://firecrawl.ai/
FIRECRAWL_API_KEY=test-firecrawl-key

# ======================================
# Claude Hooks Core Configuration
# ======================================

# Enable debug mode for verbose logging
# Values: true, false
CLAUDE_HOOKS_DEBUG=false

# Custom configuration directory path
# If not set, searches in .claude/hooks/, .claude/, and current directory
# CLAUDE_HOOKS_CONFIG_DIR=/path/to/config

# Directory for log files
# If not set, uses system temp directory
# CLAUDE_HOOKS_LOG_DIR=/path/to/logs

# Use local directory for temporary files
# Values: true, false
CLAUDE_HOOKS_USE_LOCAL_DIR=false

# ======================================
# TTS (Text-to-Speech) Configuration
# ======================================

# Primary TTS provider
# Values: macos, openai, elevenlabs
CLAUDE_HOOKS_TTS_PROVIDER=macos

# Fallback TTS provider if primary fails
# Values: macos, openai, elevenlabs, none
CLAUDE_HOOKS_TTS_FALLBACK_PROVIDER=none

# ======================================
# OpenAI TTS Configuration
# ======================================

# OpenAI TTS model
# Values: tts-1, tts-1-hd
CLAUDE_HOOKS_OPENAI_TTS_MODEL=tts-1

# OpenAI TTS voice
# Values: alloy, echo, fable, onyx, nova, shimmer
CLAUDE_HOOKS_OPENAI_TTS_VOICE=nova

# OpenAI TTS speed (0.25 to 4.0)
CLAUDE_HOOKS_OPENAI_TTS_SPEED=1.0

# OpenAI TTS output format
# Values: mp3, opus, aac, flac
CLAUDE_HOOKS_OPENAI_TTS_FORMAT=mp3

# ======================================
# ElevenLabs TTS Configuration
# ======================================

# ElevenLabs voice ID
# Browse voices at https://elevenlabs.io/voice-library
CLAUDE_HOOKS_ELEVENLABS_TTS_VOICE=EXAVITQu4vr4xnSDxMaL

# ElevenLabs model
# Values: eleven_monolingual_v1, eleven_multilingual_v2, eleven_turbo_v2
CLAUDE_HOOKS_ELEVENLABS_TTS_MODEL=eleven_turbo_v2

# ======================================
# macOS TTS Configuration
# ======================================

# macOS system voice name
# Run `say -v ?` to list available voices
CLAUDE_HOOKS_MACOS_TTS_VOICE=Samantha

# macOS speech rate (words per minute, 90-720)
CLAUDE_HOOKS_MACOS_TTS_RATE=200

# Additional TTS configuration (for compatibility)
CLAUDE_HOOKS_AUDIO_COOLDOWN_MS=2000
CLAUDE_HOOKS_CACHE_TTL_MS=3600000
CLAUDE_HOOKS_TTS_MACOS_RATE=200
CLAUDE_HOOKS_TTS_MACOS_VOICE=Samantha
CLAUDE_HOOKS_TTS_OPENAI_MODEL=tts-1
CLAUDE_HOOKS_TTS_OPENAI_SPEED=1.0
CLAUDE_HOOKS_TTS_OPENAI_VOICE=nova
CLAUDE_HOOKS_TTS_VOICE=Samantha

# macOS speech volume (0.0 to 1.0)
CLAUDE_HOOKS_MACOS_TTS_VOLUME=1.0

# Enable macOS TTS
# Values: true, false
CLAUDE_HOOKS_MACOS_TTS_ENABLED=true

# ======================================
# Sound Notification Configuration
# ======================================

# Play sound on successful command completion
# Values: true, false
CLAUDE_HOOKS_SOUND_SUCCESS=true

# Play sound on warnings
# Values: true, false
CLAUDE_HOOKS_SOUND_WARNING=false

# Play sound on errors
# Values: true, false
CLAUDE_HOOKS_SOUND_ERROR=false

# Sound volume level
# Values: low, medium, high
CLAUDE_HOOKS_SOUND_VOLUME=medium

# Delay before playing sound (milliseconds)
CLAUDE_HOOKS_SOUND_DELAY=0

# Cooldown period between sounds (milliseconds)
CLAUDE_HOOKS_SOUND_COOLDOWN=5000

# Minimum execution time to trigger sound (milliseconds)
CLAUDE_HOOKS_MIN_EXEC_TIME=1000

# ======================================
# Quiet Hours Configuration
# ======================================

# Enable quiet hours (no sounds/speech during specified times)
# Values: true, false
CLAUDE_HOOKS_QUIET_HOURS_ENABLED=false

# Allow urgent notifications during quiet hours
# Values: true, false
CLAUDE_HOOKS_QUIET_HOURS_ALLOW_URGENT=false

# Timezone for quiet hours (IANA timezone)
# Example: America/New_York, Europe/London, Asia/Tokyo
CLAUDE_HOOKS_QUIET_HOURS_TIMEZONE=America/New_York

# Days when quiet hours apply (comma-separated)
# Values: monday, tuesday, wednesday, thursday, friday, saturday, sunday
CLAUDE_HOOKS_QUIET_HOURS_DAYS=monday,tuesday,wednesday,thursday,friday

# Quiet hour time ranges (comma-separated, 24-hour format)
# Format: START-END,START-END
# Example: 22:00-08:00 (10 PM to 8 AM)
CLAUDE_HOOKS_QUIET_HOURS_RANGES=22:00-08:00

# ======================================
# Legacy Speech Configuration
# ======================================

# Enable speech synthesis (deprecated, use TTS configuration above)
# Values: true, false
CLAUDE_HOOKS_SPEECH_ENABLED=false

# Speech voice (deprecated, use TTS configuration above)
CLAUDE_HOOKS_SPEECH_VOICE=Samantha

# Speech rate (deprecated, use TTS configuration above)
CLAUDE_HOOKS_SPEECH_RATE=200

# Speech volume (deprecated, use TTS configuration above)
CLAUDE_HOOKS_SPEECH_VOLUME=1.0

# ======================================
# Additional Configuration
# ======================================

# Enable speech for command output
# Values: true, false
CLAUDE_HOOKS_SPEAK=false

# Enable notification sounds
# Values: true, false
CLAUDE_HOOKS_NOTIFY_SOUND=true

# Cooldown period between notifications (milliseconds)
CLAUDE_HOOKS_COOLDOWN_PERIOD=5000

# Allow urgent messages to override cooldown
# Values: true, false
CLAUDE_HOOKS_ALLOW_URGENT_OVERRIDE=true
