{
  "name": "mnemosyne",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:reset": "pnpm --filter @studio/db db:reset",
    "dev": "pnpm --filter @studio/app dev",
    "docs:dev": "pnpm --filter @studio/docs dev",
    "build": "turbo build",
    "start": "pnpm --filter @studio/app start",
    "lint": "turbo lint",
    "lint:root": "eslint . --max-warnings 0",
    "lint:staged": "tsx packages/scripts/src/eslint-check-staged.ts",
    "format": "prettier --write .",
    "format:staged": "tsx packages/scripts/src/prettier-check-staged.ts",
    "format:check": "prettier --check .",
    "format:pnpm": "pnpm format",
    "test": "turbo test",
    "test:ci": "turbo test -- --run",
    "test:storybook": "pnpm --filter @studio/app test:storybook",
    "type-check": "turbo type-check",
    "storybook": "pnpm --filter @studio/app storybook",
    "build-storybook": "pnpm --filter @studio/app build-storybook",
    "prepare": "husky",
    "postinstall": "playwright install chromium",
    "import:messages": "tsx packages/scripts/src/import-messages.ts --in packages/scripts/src/data/messages.csv",
    "studio:dev": "pnpm --filter \"@studio/*\" dev",
    "studio:build": "pnpm --filter \"@studio/*\" build",
    "studio:test": "pnpm --filter \"@studio/*\" test",
    "studio:lint": "pnpm --filter \"@studio/*\" lint",
    "clean": "turbo clean && pnpm --filter \"@studio/*\" clean",
    "clean:cache": "turbo clean && rm -rf node_modules/.cache",
    "clean:all": "pnpm clean && pnpm clean:cache && rm -rf node_modules",
    "fresh": "pnpm clean:all && pnpm install",
    "check": "turbo format:check lint type-check && turbo test -- --run",
    "check:packages": "pnpm --filter \"@studio/*\" run check",
    "workspace:info": "pnpm list --depth=0",
    "workspace:outdated": "pnpm outdated --recursive"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "axios": "^1.10.0",
    "commander": "^14.0.0",
    "fast-csv": "^5.0.2",
    "linkify-it": "^5.0.0",
    "next": "15.3.4",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "stacktracey": "^2.1.8",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@studio/eslint-config": "workspace:*",
    "@studio/prettier-config": "workspace:*",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-vitest": "^9.0.15",
    "@storybook/nextjs-vite": "^9.0.15",
    "@storybook/react": "^9.0.15",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/commander": "^2.12.5",
    "@types/linkify-it": "^5.0.0",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.0.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.0.14",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "markdown-to-jsx": "^7.7.10",
    "mock-fs": "^5.5.0",
    "msw": "^2.10.2",
    "msw-storybook-addon": "^2.0.5",
    "playwright": "^1.53.2",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "storybook": "^9.0.15",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.16.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
